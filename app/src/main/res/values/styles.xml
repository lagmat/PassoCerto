    <style name="Btn_msg">
        <!-- Botão da Mensagem -->
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/ic_btn_msg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Btn_red">
        <!-- Botão Redondo -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/ic_btn_red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Btn_red2">
        <!-- Botão Redondo -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/ic_btn_red2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#FFCB06</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Btn_direcao">
        <!-- Botão Avançar ou Retornar -->
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Jan_aviso" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Style para AlertDialogo -->
        <item name="android:background">@drawable/ic_bkg_msg</item>
        <item name="buttonBarNegativeButtonStyle">@style/Btn_msg</item>
        <item name="buttonBarPositiveButtonStyle">@style/Btn_msg</item>
        <item name="buttonBarNeutralButtonStyle">@style/Btn_msg</item>
    </style>

    <style name="Img_msg">
        <!-- Imagem da Mensagem -->
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="FullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
